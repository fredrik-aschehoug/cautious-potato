@using CautiousPotato.Server.Extensions
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <ResourcePreloader />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["CautiousPotato.Server.styles.css"]" />
    <link rel="stylesheet" href="@Assets["_content/Microsoft.FluentUI.AspNetCore.Components/css/reboot.css"]" />
    <ImportMap nonce="@_nonce" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet @rendermode="@(new InteractiveWebAssemblyRenderMode(prerender: false))" />
</head>

<body>
    <Routes @rendermode="@(new InteractiveWebAssemblyRenderMode(prerender: false))" />
    <script src="@Assets["_framework/blazor.web.js"]" nonce="@_nonce"></script>
</body>

</html>

@code
{
    [Inject] public required IHttpContextAccessor HttpContextAccessor { get; set; }
    private string? _nonce;

    protected override void OnInitialized()
    {
        _nonce = HttpContextAccessor.HttpContext?.GetNonce();
    }
}